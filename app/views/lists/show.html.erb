<div class="banner", style="height:300px; background-image: url(<%= cl_image_path @list.photo.key%>); background-size: cover; background-position: center;">
  <h1 style="text-align:center; font-size: 60px; color: white; padding-top: 140px;"> <strong>Your list: <%= @list.name %></strong></h1>
</div>
<%= link_to "Add movie", new_list_bookmark_path(@list), class:"btn btn-dark mb-4 mt-3" %>


<div class="container">
  <div class="row mb-5">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-sm-4">
        <div class="card mb-4">
          <%= image_tag ("https://image.tmdb.org/t/p/original/#{bookmark.movie.poster_url}") %>
          <div class="card-body", style="height: 350px;">
            <h5 class="card-title"> <strong><%= bookmark.movie.title%></strong></h5>
            <p class="card-text"> <%= bookmark.movie.overview%> </p>
            <p class="card-text"> <%= bookmark.comment%> </p>
