<h2 style="font-size: 40px;"> <strong>Your list: <%= @list.name %></strong> <br>
<%= link_to "Add movie", new_list_bookmark_path(@list), class:"btn btn-dark mb-4 mt-3" %></h2>


<div class="row mb-5">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-sm-4">
      <div class="card mb-4">
        <%= image_tag ("https://image.tmdb.org/t/p/original/#{bookmark.movie.poster_url}") %>
        <div class="card-body", style="height: 350px;">
          <h5 class="card-title"> <strong><%= bookmark.movie.title%></strong></h5>
          <p class="card-text"> <%= bookmark.movie.overview%> </p>
          <p class="card-text"> <%= bookmark.comment%> </p>
          <%= link_to "🗑️", list_bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
        </div>
      </div>
    </div>
  <% end %>
</div>
