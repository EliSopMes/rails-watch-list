<div class="banner" style="height:300px; background-image: url(<%= image_path('film.jpg') %>); background-size: cover; background-position: center;">
  <h1 style="text-align:center; padding-top: 140px; color: white; font-size: 60px; background-image:"> <strong>Your Watch lists</strong></h1>
</div>
<br>
<br>
<div class="container">
  <div class="row mb-5">
    <% @lists.each do |list| %>
      <div class="col-sm-4">
        <div class="card mb-4", style="height: 200px; background-image: url(<%= cl_image_path list.photo.key, alt: "Film", style:"height: 270px;", crop: :fill %>); background-size: cover; background-position: center;">
          <div class="card-body", style="height: 350px;">
            <h5 class="card-title"> <strong><%=link_to list.name, list_path(list), style:"color: white; font-size: 40px; text-decoration: none;"%></strong></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Create new list", new_list_path, class:"btn btn-primary mb-5", style:"width: 400px; font-size: 25px;" %>
</div>
